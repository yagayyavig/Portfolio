<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ðŸ‘‘ Admin Panel - Passport Auth</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    :root {
      --accent: #00bfff;
      --hover: #007acc;
      --text: #e0f7fa;
      --bg-black: #000000;
      --card-bg: rgba(10, 10, 10, 0.9);
      --danger: #ff4444;
      --danger-hover: #cc0000;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: var(--bg-black);
      color: var(--text);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;
      position: relative;
      overflow-x: hidden;
    }

    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 20%, rgba(0, 191, 255, 0.15) 0%, transparent 40%),
        radial-gradient(circle at 80% 80%, rgba(0, 191, 255, 0.1) 0%, transparent 40%);
      z-index: -1;
      pointer-events: none;
    }

    .container {
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
      padding: 1rem;
    }

    .card {
      background: var(--card-bg);
      padding: 2.5rem;
      border-radius: 1.2rem;
      box-shadow: 
        0 0 20px rgba(0, 191, 255, 0.2),
        0 10px 20px rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(10px);
      width: 100%;
      animation: cardFloat 0.5s ease-out;
    }

    @keyframes cardFloat {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h1 {
      color: var(--accent);
      font-size: 2rem;
      margin-bottom: 2rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      text-align: center;
    }

    .session-card {
      background: rgba(255, 255, 255, 0.05);
      padding: 1.5rem;
      border-radius: 0.8rem;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
    }

    .session-card:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateY(-2px);
    }

    .session-card p {
      margin: 0.5rem 0;
      color: var(--text);
      opacity: 0.9;
    }

    .btn {
      padding: 0.8rem 1.5rem;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1rem;
      text-decoration: none;
      display: inline-block;
      margin: 0.5rem 0;
    }

    .btn-danger {
      background-color: var(--danger);
      color: white;
    }

    .btn-danger:hover {
      background-color: var(--danger-hover);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 0, 0, 0.2);
    }

    .btn-back {
      background-color: var(--accent);
      color: white;
      margin-bottom: 1rem;
      display: inline-block;
    }

    .btn-back:hover {
      background-color: var(--hover);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 191, 255, 0.2);
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    @media (max-width: 480px) {
      .container {
        padding: 0.5rem;
      }

      .card {
        padding: 1.5rem;
      }

      h1 {
        font-size: 1.6rem;
      }

      .session-card {
        padding: 1rem;
      }

      .btn {
        padding: 0.7rem 1.2rem;
        font-size: 0.95rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="header">
        <h1>ðŸ‘‘ Admin Panel</h1>
        <a href="/dashboard" class="btn btn-back">
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
      </div>

      <% Object.keys(sessions).forEach(session => {
          const s = sessions[session];
          const user = s && s.passport && s.passport.user;
      %>
        <div class="session-card">
          <p><strong>Session ID:</strong> <%= session %></p>
          <p><strong>User ID:</strong> <%= user?.id || user || "Unknown" %></p>
          <p><strong>Name:</strong> <%= user?.name || "Unknown" %></p>
          <a href="/deauth/<%= session %>" class="btn btn-danger">
            <i class="fas fa-trash"></i> Revoke Session
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
