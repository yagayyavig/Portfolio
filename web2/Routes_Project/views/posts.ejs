<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <title>Homepage</title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <h1>Homepage</h1>
        <% if (!user) { %>
          <!-- ✅ FIXED -->
          <a role="button" href="/auth/login">Login</a>
        <% } else { %>
          <a role="button" href="/auth/logout">Logout</a>
        <% } %>
      </div>

      <h2>Welcome, <%= user?.uname || "Visitor" %>.</h2>

      <div>
        <p>All Posts</p>
        <% if (posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="individualPost">
              <!-- ✅ FIXED -->
              <a href="/posts/show/<%= post.id %>"><%= post.title %></a>
              <p><%= post.description %></p>
            </div>
          <% }) %>
        <% } else { %>
          <!-- ✅ FIXED -->
          <p>No posts yet. Be the first to <a href="/posts/create">create one</a>!</p>
        <% } %>
      </div>

      <div>
        <!-- ✅ FIXED -->
        <a href="/subs/list">Subgroups</a>
      </div>

      <% if (user) { %>
        <div>
          <a role="button" href="/posts/create">Create Post</a>
        </div>
      <% } else { %>
        <p>Please <a href="/auth/login">login</a> to make a post.</p>
      <% } %>

      <div style="margin-top: 2rem;">
        <!-- ✅ FIXED -->
        <a role="button" class="secondary" href="https://yagayyaportfolio.xyz/web2/">← Back to Homepage</a>
      </div>
    </main>
  </body>
</html>
